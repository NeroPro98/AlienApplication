<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Adapter.FriendAdapter$ViewHloder">


    <ImageView
        android:id="@+id/Friendimage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:foreground="@drawable/circle_shape"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/Name_Friend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="112dp"
        android:layout_marginTop="10dp"
        android:text="TextView"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/Active"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Name_Friend"
        android:layout_alignLeft="@+id/Friendimage"
        android:layout_marginLeft="97dp"
        android:layout_marginTop="2dp"
        android:text="TextView"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/add_friend"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@id/Name_Friend"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="35dp"
        android:onClick="Add_Friend"
        android:src="@drawable/add_friend" />

    <ImageView
        android:id="@+id/delete_friend"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignLeft="@id/Name_Friend"
        android:layout_marginLeft="253dp"
        android:layout_marginTop="10dp"
        android:onClick="Delete_Friend"
        android:src="@drawable/delete" />

    <ImageView
        android:id="@+id/block_friend"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignLeft="@id/Name_Friend"
        android:layout_marginLeft="255dp"
        android:layout_marginTop="65dp"
        android:onClick="Block_Friend"
        android:src="@drawable/block" />
</RelativeLayout>