<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/spaceback5"
    tools:context=".welcom_page">


    <TextView
        android:id="@+id/journey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/make_your_journey_with_friends"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:alpha="0"
        />

    <ImageView
        android:id="@+id/Zeon_chat2"
        android:layout_width="251dp"
        android:layout_height="205dp"
        android:layout_marginTop="196dp"
        android:alpha="0"
        android:scaleX="2.3"
        android:scaleY="2.3"
        android:src="@drawable/alien_chat_logo2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/swap_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="588dp"
        android:alpha="0"
        android:text="@string/swap_up"
        android:textColor="@color/dark_graw"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



</android.support.constraint.ConstraintLayout>